<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Model="clr-namespace:DevBuddy.Model" x:Class="DevBuddy.MainWindow"
        Title="MainWindow" Height="681" Width="1051">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <!--<TabControl HorizontalAlignment="Left" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" Width="1000">-->
        <TabControl HorizontalAlignment="Left" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" Width="1000">
            <TabItem x:Name="FileStager" Header="FileStager">
                <Canvas Margin="0,-2,0,1">
                <Grid Background="#FFE5E5E5"/>
                    <Label x:Name="lblTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Canvas.Left="194" Canvas.Top="-35" Width="801"/>
                <Label x:Name="lblLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Canvas.Top="27" Width="466"/>
                    <DataGrid x:Name="dataGridTest" RowDetailsVisibilityMode="VisibleWhenSelected" SelectionChanged="dataGridTest_SelectionChanged" Height="475" Canvas.Left="10" Canvas.Top="76" Width="985" RowEditEnding="dataGridTest_RowEditEnding" AutoGeneratedColumns="dataGridTest_AutoGeneratedColumns" AutoGenerateColumns="False" BeginningEdit="dataGridTest_BeginningEdit" >
                        <DataGrid.Resources>
                            <AccessText x:Key="clicky">+</AccessText>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding ProjectId}" ClipboardContentBinding="{x:Null}" Visibility="Collapsed"/>
                            <DataGridTextColumn Binding="{Binding ProjectName}" ClipboardContentBinding="{x:Null}"/>
                            <DataGridTemplateColumn Header="Project Start"> 
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProjectStart}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding ProjectStart}"></DatePicker>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Project End">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProjectEnd}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding ProjectEnd}"></DatePicker>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn Binding="{Binding isEnabled}" ClipboardContentBinding="{x:Null}" Header="Enabled"/>
                            <!--<DataGridCheckBoxColumn Binding="{Binding isVisible}" ClipboardContentBinding="{x:Null}" Header="Visible"/>-->
                            <DataGridTextColumn Binding="{Binding AttachedAssets}" ClipboardContentBinding="{x:Null}" Visibility="Collapsed"/>
                            <DataGridTextColumn Binding="{Binding ProjectDocumentFolder}" ClipboardContentBinding="{x:Null}" Header="Project Document Folder"/>
                            <!--<DataGridTextColumn Header="View Docs" FontWeight="Bold" Binding="{Binding Source={StaticResource ResourceKey=clicky}}"/>-->
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Hyperlink Click="Hyperlink_Click_1" NavigateUri="{Binding ProjectDocumentFolder}">++</Hyperlink></TextBlock>
                                    </DataTemplate>
                                    
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding AssociatedTasks}" ClipboardContentBinding="{x:Null}" Header="Associated 'MyHours' Task"/>
                        </DataGrid.Columns>
                        <DataGrid.Effect>
                            <DropShadowEffect/>
                        </DataGrid.Effect>
             
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <DataGrid ItemsSource="{Binding AttachedAssets}" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns_1" BeginningEdit="DataGrid_BeginningEdit_1"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:Name="btnSubmit" Content="Generate Data" Visibility="Collapsed" Click="Button_Click_1" Height="22" MaxWidth="75" MaxHeight="22" HorizontalContentAlignment="Center" MinWidth="75" MinHeight="22" Canvas.Left="289" Canvas.Top="537"/>

                <Button x:Name="btnRefresh" Content="Refresh" Click="btnRefresh_Click" Width="75" Height="22" MaxWidth="75" MaxHeight="22" MinWidth="75" MinHeight="22" Canvas.Left="65" Canvas.Top="537"/>
                <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Canvas.Left="438" Canvas.Top="537" />

                <Button x:Name="btnRun" Content="Run" Click="btnRun_Click" />
                    </StackPanel>
                </Canvas>
                </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5" Margin="10,-2,-10,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="131*"/>
                        <ColumnDefinition Width="859*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Select Default Documents Folder:" Margin="0,0,0,284" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txtDocFolder"  HorizontalAlignment="Left" Height="22" Margin="62,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297" IsReadOnlyCaretVisible="True" IsEnabled="False" Grid.ColumnSpan="2"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="233.299,52,0,0" VerticalAlignment="Top" Width="23" Click="Button_Click_2" Grid.Column="1"/>
                    
                    <Label Content="Select Default Work Folder:" Margin="0,91,10,471" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txtWorkFolder"  HorizontalAlignment="Left" Height="22" Margin="62,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="297" IsReadOnlyCaretVisible="True" IsEnabled="False" Grid.ColumnSpan="2"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="233.299,126,0,0" VerticalAlignment="Top" Width="23" Click="Button_Click_3" Grid.Column="1"/>

                    <Label Content="Select a work portfolio file:" Margin="0,176,10,364" RenderTransformOrigin="0.448,0.725" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txtWorkPortfolioFilePath"  HorizontalAlignment="Left" Height="22" Margin="62,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="297" IsReadOnlyCaretVisible="True" IsEnabled="False" Grid.ColumnSpan="2"/>
                    <Button x:Name="btnBrowsePortfolioFile" Content="..." HorizontalAlignment="Left" Margin="233.299,200,0,0" VerticalAlignment="Top" Width="23" Click="btnBrowsePortfolioFile_Click" Grid.Column="1"/>
                    <Button Content="New File" HorizontalAlignment="Left" Margin="62,233,0,0" VerticalAlignment="Top" Width="60" Click="btnNewFile_Click"/>
                    <Label Content="On first Use - Click New File and create a new settings XML file" HorizontalAlignment="Left" Margin="336.299,48,0,0" VerticalAlignment="Top" Width="464" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Log">
                <Grid Background="#FFE5E5E5" Margin="10,-2,-10,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="994*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Name="LogList" Grid.ColumnSpan="2">
                        <ListBox.Effect>
                            <DropShadowEffect/>
                        </ListBox.Effect>
                    </ListBox>
                    
                </Grid>
            </TabItem>    
        </TabControl>
        

    </Grid>
</Window>
